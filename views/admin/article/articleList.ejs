                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="page-header">
                            <h3 class="page-title" title="栏目列表管理">
                                Article list management
                            </h3>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item" title="前往文章列表"><a href="/admin/article/articleAdd">Return to article
                                            management </a></li>
                                    <li class="breadcrumb-item active" title="返回首页"> <a href="/admin"> Back to home page</a> </li>
                                </ol>
                            </nav>
                        </div>
                        <div class="row">
                            <div class="col-md-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Article list</h4>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th title="栏目排序"> Article sorting </th>
                                                        <th title="栏目排序"> Article imgurl </th>
                                                        <th title="栏目名称"> Article title </th>
                                                        <th title="栏目名称"> Article name </th>
                                                        <th title="栏目创建时间"> Article ctime</th>
                                                        <th title="栏目操作"> Article operation</th>
                                                    </tr>
                                                </thead>
                                            
                                                <tbody>
                                                    <% article.forEach(function(val){ %>
                                                    <tr>
                                                        <th> <%= val.order%> </th>
                                                        <th class="py-2"><img src="/articleImages/<%= val.imgurl%>"> </th>
                                                        <th>  <%= val.itemId.title%></th>
                                                        <th><%= val.title%></th>
                                                        <th> <%= val.ctime.toLocaleString()%> </th>
                                                        <th>
                                                            <a href="/admin/article/articleAttrice/<%=val._id%>" onclick="return confirm('你确定要修改吗？')">修
                                                                改 </a>
                                                            |
                                                            <a class="text-danger" href="/admin/article/articleRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗？') ">
                                                                删 除 </a>
                                                        </th>
                                                    </tr>
                                                    <% }) %>
                                                </tbody>

                                            </table>


                                            <br> &nbsp; 
                                            <div class="btn-group" role="group" aria-label="Basic example">
                                                <a href="/admin/article/articleList" class="text-black btn btn-link btn-sm ">Home page</a>
                
                                                <a href="/admin/article/articleList?page=<%=page-1%>" class="text-black btn btn-link btn-sm">Previous page</a>
                
                                                <% for(var i = 1; i<= maxPage; i++){ %>
                                                <a href="/admin/article/articleList?page=<%=i%>" class="text-black btn btn-link btn-sm" >
                                                    <%=i%></a>
                                                <% } %>
                
                                                <a href="/admin/article/articleList?page=<%=-(-page-1)%>" class=" text-black btn btn-link btn-sm" >Next page</a>
                
                                                <a href="/admin/article/articleList?page=<%=maxPage%>" class="text-black btn btn-link btn-sm">Tail page</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
